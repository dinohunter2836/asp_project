@model IEnumerable<WebApp.Models.Post>
@{
    ViewData["Title"] = "Posts";
}
<h1>@ViewData["Title"]</h1>

<div class="jumbotron bg-light">
    <h2 class="text-center text-primary">
        <i class="fab fa-facebook-messenger"></i>&nbsp; Posts
    </h2>

    <div class="row">
        <div class="col-md-12" id="chat">
            @if (Model != null)
            {
                @foreach (var post in Model.OrderByDescending(m => m.Time))
                {
                    <div class="row">
                        <div class="">
                            <div class="container bg-light">
                                <p class="sender text-left">@post.UserName</p>
                                <p class="text-left">@post.Text</p>
                                <span class="time-left">@post.Time.ToLocalTime().ToString()</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <a class="btn" asp-area="" asp-controller="Comments" asp-action="Comments" asp-route-id=@post.Id.ToString()>
                            Comments
                        </a>
                        @if (User.IsInRole("admin"))
                        {
                            <a class="btn" asp-area="" asp-controller="Posts" asp-action="DeletePost" asp-route-id=@post.Id.ToString()>
                                Delete
                            </a>
                        }
                    </div>
                }
            }
        </div>
    </div>

</div>
